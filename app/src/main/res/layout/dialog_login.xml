<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_teal700"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/lable_Login_Activity"
            android:textColor="@color/white"
            android:textSize="16pt"
            android:textStyle="bold" />

    </LinearLayout>

    <!--<EditText
        android:id="@+id/edt_dialog_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_white_corner_10_border_gray"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/hint_edt_dialog_username"
        android:textColor="@color/teal_700"
        android:inputType="textPersonName" />-->

    <!--<EditText
        android:id="@+id/edt_dialog_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_corner_10_border_gray"
        android:layout_marginTop="16dp"
        android:textColor="@color/teal_700"
        android:hint="@string/hint_edt_dialog_password"
        android:inputType="textPassword" />-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ip_layout_dialog_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ip_edt_dialog_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"
            android:hint="@string/hint_userName"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ip_layout_dialog_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ip_edt_dialog_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:id="@+id/cb_dialog_savepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="Lưu mật khẩu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_teal700_corner_10"
            android:text="@string/btn_login"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/bg_darkgray_corner_10"
            android:text="@string/btn_cancle"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_dialog_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:text="@string/btn_forgetPassword" />

    <TextView
        android:id="@+id/txt_dialog_connect"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/txt_dialog_connect" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/bg_teal700_corner_10"
        android:text="@string/btn_signup"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/btn_phone_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:drawableLeft="@drawable/ic_phone_black_24dp"

        android:text="Sign In with Phone"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/btn_gogle_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        android:drawableLeft="@drawable/fui_ic_googleg_color_24dp"


        android:text="Sign In with Google"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF" />

</LinearLayout>
