<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/bg_teal700"
            android:id="@+id/txt_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/txt_dialog_title"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16pt"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_dialog_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_white_corner_10_border_gray"
        android:layout_marginTop="16dp"
        android:hint="@string/hint_edt_dialog_username"
        android:textColor="@color/teal_700"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt_dialog_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_white_corner_10_border_gray"
        android:layout_marginTop="16dp"
        android:textColor="@color/teal_700"
        android:hint="@string/hint_edt_dialog_password"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/cb_dialog_savepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:text="Lưu mật khẩu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btn_dialog_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_teal700_corner_10"
            android:text="@string/btn_dialog_login"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btn_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:alpha="0.7"
            android:textColor="@color/white"
            android:background="@drawable/bg_darkgray_corner_10"
            android:text="@string/btn_dialog_cancle" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_dialog_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:text="@string/btn_dialog_forget_password" />

    <TextView
        android:id="@+id/txt_dialog_connect"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/txt_dialog_connect" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_dialog_signup"
        android:background="@drawable/bg_teal700_corner_10"
        android:layout_margin="12dp"
        android:textColor="@color/white" />


</LinearLayout>